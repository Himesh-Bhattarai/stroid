{
  "name": "stroid",
  "version": "0.0.2",
  "description": "Compact state management library with persistence, async caching, sync, and React hooks.",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.js"
    },
    "./async": {
      "types": "./dist/async.d.ts",
      "import": "./dist/async.js"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.js"
    },
    "./testing": {
      "types": "./dist/testing.d.ts",
      "import": "./dist/testing.js"
    },
    "./package.json": "./package.json"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Himesh-Bhattarai/stroid.git"
  },
  "bugs": {
    "url": "https://github.com/Himesh-Bhattarai/stroid/issues"
  },
  "homepage": "https://github.com/Himesh-Bhattarai/stroid#readme",
  "sideEffects": false,
  "scripts": {
    "test": "node --import tsx --test \"tests/**/*.test.ts\"",
    "typecheck": "tsc -p tsconfig.types.json",
    "build": "tsup"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@types/react": "^18.2.46",
    "eslint": "^8.57.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "tsup": "^8.5.1",
    "tsx": "^4.7.0",
    "typescript": "^5.7.2"
  }
}
